<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipsActivity">

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tips_btn_regresar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="start"
            app:srcCompat="@drawable/ic_volver" />

        <TextView
            android:id="@+id/tips_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consejos para un buen cultivo"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="#FFFFFF" />


        <TextView
            android:id="@+id/tips_textview_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando tips..." />

        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:background="#FFFFFF" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>